<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartedWorkOutActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whatIsYourWorkOut"
        android:textSize="48dp"
        android:text="your workout"
        android:layout_marginTop="250dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/timeLeftOnWorkOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is time"
        android:textSize="48dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@+id/whatIsYourWorkOut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>